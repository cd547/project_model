      $('#content').html(htmltext);
  }
  //删除项目
  function deltpro(pro_num)
  {
      $.ajaxSetup({async: true});
      $.post("/project/project/ajaxdeletepro",{pro_num:pro_num},
          function(returnedData,status){
              var result=returnedData;
              if(result==1){
                  alert("删除项目"+pro_num+"成功！");
                  search_projectlist($('#project_search').val());
              }
              else//网络错误
              {alert("删除项目"+pro_num+"失败");}
          });

  }
//搜索项目
  function search_projectlist(query)
  {
      $.ajaxSetup({async: true});
      $.post("/project/main/ajaxpage",{query:query},
          function(returnedData,status){
              var result=returnedData;
              if(result!=null){
                  $('#project_list').empty();
                  $('#project_list').html(result);
              }
              else//网络错误
              {alert("失败");}
          });
  }
