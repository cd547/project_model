  function deltalert(pro_num)
  {
      $('#myModal1').modal('show');
      $('.modal-title').empty();
      $('.modal-title').html('删除确认');
      $('#content').empty();
      htmltext="<p>您确认要删除项目"+pro_num+"吗？</p>" +
